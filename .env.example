# ==========================================
# ROADY DEVIS EMAIL SERVICE - CONFIGURATION
# ==========================================

# Environnement
NODE_ENV=development

# Serveur
PORT=3002
HOST=0.0.0.0

# MongoDB
MONGODB_URI=mongodb://email_admin:your_password@mongodb-email:27017/roady_email_dev?authSource=admin
MONGODB_USER=email_admin
MONGODB_PASSWORD=your_strong_password_here
MONGODB_DB=roady_email_dev

# SMTP Configuration (Envoi d'emails)
SMTP_HOST=ssl0.ovh.net
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=noreply@roadysollies.fr
SMTP_PASSWORD=your_smtp_password

# IMAP Configuration (Réception d'emails)
IMAP_HOST=ssl0.ovh.net
IMAP_PORT=993
IMAP_SECURE=true
IMAP_USER=devis@roadysollies.fr
IMAP_PASSWORD=your_imap_password

# IMAP Polling
IMAP_CHECK_INTERVAL_MS=60000
IMAP_MAILBOX=INBOX

# App principale (pour callbacks)
MAIN_APP_URL=https://roadysollies.fr
MAIN_APP_API_KEY=your_api_key_here

# Sécurité API
API_SECRET_KEY=your_secret_key_for_jwt_or_api_auth

# Logs
LOG_LEVEL=info

# Stockage des pièces jointes
ATTACHMENTS_PATH=./attachments
MAX_ATTACHMENT_SIZE_MB=10

# Relances automatiques
REMINDER_ENABLED=true
REMINDER_CRON=0 9 * * *